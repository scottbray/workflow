<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th>Workflow State</th>
      <th>Remarks</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= article.author %></td>
        <td><%= article.workflow_state %></td>
        <td><%= article.remarks %></td>
        <td><%= button_to 'Review', review_articles_path, method: :review, remote: true, class: 'btn primary' %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <!--link_to "Review", review_articles_path-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

